<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package 实体所在的包名 -->
<hibernate-mapping package="com.zh.ljgc.entity">
    <!-- name 类名，table 表名 -->
    <class name="Hotel" table="hotel">
        <id name="sid" column="sid">
            <generator class="native" />
        </id>
        <property name="sroom" />
        <property name="sbed" />
        <property name="sbreakfast" />
        <property name="swiff" />
        <property name="sprice" />
        <property name="sdiscount" />
    </class>


</hibernate-mapping>