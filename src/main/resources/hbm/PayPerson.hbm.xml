<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package 实体所在的包名 -->
<hibernate-mapping package="com.zh.ljgc.entity">
    <!-- name 类名，table 表名 -->
    <class name="PayPerson" table="payperson">
        <id name="paypersonId">
            <generator class="native" />
        </id>
        <property name="paypersonName" />
        <property name="paypersonCardNo" />
        <!--<many-to-one name="orders" foreign-key="orderId" column="orders_id"/>-->
    </class>
</hibernate-mapping>