<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package 实体所在的包名 -->
<hibernate-mapping package="com.zh.ljgc.entity">
    <!-- name 类名，table 表名 -->
    <class name="ShopFoodEntity" table="shopfood">
        <id name="fid" column="fid">
            <generator class="native" />
        </id>
        <property name="fimg" />
        <property name="foodname" />
        <property name="fspeak" />
        <property name="faddress" />
        <property name="fphone" />
    </class>


</hibernate-mapping>