<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package 实体所在的包名 -->
<hibernate-mapping package="com.zh.ljgc.entity">
    <!-- name 类名，table 表名 -->
    <class name="Title" table="title">
        <id name="id">
            <generator class="native" />
        </id>
        <property name="titleName" />
        <property name="img"/>
        <property name="video"/>

            <many-to-one name="part" class="Part" column="column_id"/>
    </class>
</hibernate-mapping>